                                </li>
                            </ul>

                        </div>


                        <div class="tab-content">
                            <!-- 關於課程 -->
                            <div class="tab-pane slide slide show active" id="tab1">
                                @* 總覽 *@
                                <div class="content pb-20">
                                    <h5 class="title mb-20">總覽</h5>
                                    <form>
                                        <fieldset>
                                            <div class="row gl-xl-5 mt-10 pt-10" style="border:2px #bfbfbf solid;border-radius:8px">
                                                <div class="col-lg-6">
                                                    <ul class="list-group list-unstyled mb-20">
                                                        <!--時數-->
                                                        <li class="d-inline-block icon-start font-sm">
                                                            <i class="fas fa-clock color-primary"></i>
                                                            <span class="align-text">&nbsp;總時數:@Html.DisplayFor(m => m.FTime) hr</span>
                                                        </li>
                                                        <!--名額-->
                                                        <li class="d-inline-block icon-start font-sm">
                                                            <i class="fas fa-users color-primary"></i>
                                                            <span class="align-text">名額:@Html.DisplayFor(m => m.FMaxPeople)人</span>
                                                        </li>
                                                        <!--最低人數下限-->
                                                        <li class="d-inline-block icon-start font-sm">
                                                            <i class="fa-solid fa-less-than-equal fa-flip-horizontal color-primary"></i>
                                                            <span class="align-text">&nbsp;開課人數下限:@Html.DisplayFor(m => m.FMinPeople)人</span>
                                                        </li>
                                                        <!--場地-->
                                                        <li class="icon-start font-sm">
                                                            <i class="fa-solid fa-location-dot color-primary"></i>
                                                            <span class="align-text">
                                                                &nbsp;
                                                                場地類型:
                                                                @(Model.FVenueType == true ? "實體" : "線上")
                                                                &#124;
                                                                場地名稱:
                                                                @Html.DisplayFor(m => m.FVenueName)
                                                                &#124;
                                                                詳細地址:
                                                                @{
                                                                    string alladdress = Model.FCity + Model.FDistrict + Model.FAddressDetail;
                                                                        @alladdress
                                                                }



                                                            </span>
                                                        </li>
                                                    </ul>

                                                </div>
                                                <div class="col-lg-6">
                                                    <ul class="list-group list-unstyled mb-20">
                                                        <!--開課日期-->
                                                        <li class=" icon-start font-sm"><i class="fa-solid fa-calendar-days color-primary"></i>&nbsp;開課日期: @Html.DisplayFor(m => m.FLessonDate)</li>
                                                        <!--開課時間-->
                                                        <li class="icon-start font-sm">
                                                            <i class="fa-solid fa-hourglass color-primary"></i>
                                                            開課時間:
                                                            @Html.DisplayFor(m => m.FStartTime)~@Html.DisplayFor(m => m.FEndTime)
                                                        </li>
                                                        <!--報名截止日期-->
                                                        <li class="icon-start font-sm"><i class="fa-regular fa-calendar-check color-primary"></i></i> 報名截止日期:@Html.DisplayFor(m => m.FRegDeadline)</li>


                                                    </ul>
                                                </div>
                                            </div>

                                        </fieldset>

                                    </form>

                                </div>
                                @* 課程敘述 *@
                                <div class="content pb-20">
                                    <h5 class="title mb-20">課程敘述</h5>
                                    <div class="row gl-xl-5 mt-20">
                                        <p style="border-radius:8px">@Html.DisplayFor(m => m.FDescription)</p>
                                    </div>
                                </div>
                                @* 課程要求 *@
                                <div class="content pb-20">
                                    <h5 class="title mb-20">課程要求</h5>
                                    <div class="row gl-xl-5 mt-20">
                                        <div class="col-lg-6">
                                            <ul class="info-list list-unstyled mb-20">
                                                <li>@Html.DisplayFor(m => m.FRequirement)</li>
                                            </ul>
                                        </div>
                                        @* <div class="col-lg-6">
                                        <ul class="info-list list-unstyled mb-20">
                                        <li>請自備筆、筆記本、水</li>
                                        </ul>
                                        </div> *@
                                    </div>

                                </div>
                            </div>
                            <!-- 評價 -->
                            <div id="evaluationListContainer"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
