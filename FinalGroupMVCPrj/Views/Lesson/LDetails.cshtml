<div class="course-details-area pb-60">
    <!-- Course title -->
    <div class="course-banner bg-img bg-cover pb-5 bg-light">
        <div class="container">
            <div class="row">
                @* 封面照 *@

                <partial name="_LshowPicturePartial" />
                @* 基本資料 *@
                <div class="col-lg-8">
                    <div class="banner-content" data-aos="fade-up">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <!--老師-->
                                <li class="breadcrumb-item active" aria-current="page"><a asp-action="Info" asp-controller="Teacher" asp-route-id="@Model.FTeacherId"><img id="avatorimg" src="/images/dog.png" style="height: 40px;height: 40px;" class="border border-primary rounded-circle  "></a>@Html.DisplayFor(x => x.FTeacher.FTeacherName)</li>
                            </ol>
                        </nav>
                        <!--課名-->
                        <h3 class="title mb-15 mt-10">
                            @Html.DisplayFor(m => m.FName)
                        </h3>
                        <div class="mb-3">
                            <!--領域-->
                            <span class=" center  badge-sm rounded bg-primary text-bg-primary "> @Html.DisplayFor(x => x.FFiled) </span>&nbsp;&#47;
                            <!--科目-->
                            <span class=" center  badge-sm rounded bg-primary text-bg-primary"> @Html.DisplayFor(x => x.FSubject.FSubjectName)</span>&nbsp;
                            <!--場地類型-->
                            <span class=" center  badge-lg rounded" style="background-color: #FDC501; color:#654e00;">
                                @(Model.FVenueType == true ? "實體" : "線上")

                            </span>
                        </div>
                        <ul class="list-group list-group-horizontal align-items-center">
                            <div FLessonCourseId="@Model.FLessonCourseId" id="avgevalpartial"></div>

                            <li class="d-inline-block icon-start font-sm">
                                <!--報名 人數-->
                                <i class="fa-regular fa-user"></i>已報名 @Html.DisplayFor(m => m.FRegPeople)人
                            </li>
                            <li class="d-inline-block icon-start font-sm">
                                <!--售價-->
                                <i class="fas fa-usd-circle"></i>
                                @* @Html.DisplayFor(m => m.FPrice) *@
                                @{
                                    int price = Convert.ToInt32(Model.FPrice);
                                        @price
                                }

                            </li>
                        </ul>
                        <hr>
                        <div class="ratings size-md gap-2 text-end">

                            @* <a href="checkout.html" class="btn btn-lg btn-outline radius-sm w-30 br-10" title="點擊收藏" target="_self"><i class="fa-regular fa-bookmark fa-xl" style="color: #30c2ec;"></i> 收藏</a> *@
                            @* <a href="checkout.html" class="btn btn-lg btn-outline radius-sm w-30 br-10" title="點擊收藏" target="_self">
