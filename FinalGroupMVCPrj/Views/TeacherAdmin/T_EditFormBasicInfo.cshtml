@model TTeacher

<!-- ========== 編輯表單 ========== -->



<form asp-controller="TeacherAdmin" asp-action="TEdittrbasicprofile" method="post">
    <div class="row mb-3">
        <!-- 標題2 老師名稱 -->
        <label  class="col-md-4 col-lg-3 col-form-label">@Html.DisplayNameFor(t => t.FTeacherName)</label>
        <div class="col-md-8 col-lg-9">
            <!-- 內容2 老師名稱 -->
            <input asp-for="FTeacherName" class="form-control" >
            <span asp-validation-for="FTeacherName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <!-- 標題3 自我介紹 -->
        <label  class="col-md-4 col-lg-3 col-form-label">@Html.DisplayNameFor(t => t.FIntroduction)</label>
        <div class="col-md-8 col-lg-9">
            <!-- 內容3 自我介紹 -->
            <textarea asp-for="FIntroduction" class="form-control" style="height: 100px"></textarea>
        </div>
    </div>

    <div class="row mb-3">
        <!-- 標題4 聯絡方式 -->
        <label  class="col-md-4 col-lg-3 col-form-label">@Html.DisplayNameFor(t => t.FContactInfo)</label>
        <div class="col-md-8 col-lg-9">
            <!-- 內容4 聯絡方式 -->
            <textarea asp-for="FContactInfo" class="form-control" style="height: 100px"></textarea>
        </div>
    </div>

@*     <div class="row mb-3">
        <!-- 標題5 備註 -->
        <label  class="col-md-4 col-lg-3 col-form-label">@Html.DisplayNameFor(t => t.FNote)</label>
        <div class="col-md-8 col-lg-9">
            <!-- 內容5 備註 -->
            <input asp-for="FNote" class="form-control" >
        </div>
    </div> *@

    <div class="text-center">
        <!-- 提交 -->
        <input type="submit" class="btn btn-primary" value="確定">
    </div>
</form>
