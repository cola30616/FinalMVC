@model TMember
@{
    ViewData["Title"] = "Login";
}

<!-- Breadcrumb start -->
<div class="breadcrumb-area bg-img bg-cover" data-bg-image="/images/owenadd/來學樂登入banner.png">
        <div class="container">
            <div class="content text-center">
               @*  <h2>登入</h2> *@
            </div>
        </div>
    </div>
    <!-- Breadcrumb end -->

    <!-- Authentication Start -->
    <div class="authentication-area ">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="main-form ">
                    <div class="d-flex justify-content-between flex-wrap gap-2 mt-50 mb-30">
                        <div class="  d-flex align-items-center">
                            <h3 class="title" data-splitting="" data-aos="">登入</h3>
                        </div>
                        <div class="link font-sm d-flex align-items-center">
                            還沒有帳號？ <span target="_self" title="Login Now" class="color-primary" style="cursor: pointer">立即註冊加入</span>
                        </div>
                        <div class="link font-sm d-flex align-items-center" style="display:none">
                            已有帳號→ <span target="_self" title="Login Now" class="color-primary" style="cursor: pointer">立即登入學習</span>
                        </div>
                    </div>
                        
                    <form asp-controller="Home" asp-action="Login" >
                            <div class="row">
                            <div class="col-12">
                                <div class="form-group mb-20" style="display:none">
                                    <label asp-for="FRealName" class="form-label">姓名<span class="color-red">*</span></label>
                                    <input asp-for ="FRealName" class="form-control" placeholder="">
                                    <span asp-validation-for="FRealName" class="text-danger"></span>
                                </div>
                            </div>
                                <div class="col-12">
                                    <div class="form-group mb-20">
                                    <label asp-for="FEmail" class="form-label">電子信箱<span class="color-red">*</span></label>
                                    <input asp-for="FEmail" class="form-control" placeholder="" value="caixiaofang@email.com">
                                    <span asp-validation-for="FEmail" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group mb-20">
                                    <label asp-for="FPassword" class="form-label">密碼<span class="color-red">*</span></label>
                                        <div class="position-relative">
                                        <input asp-for ="FPassword" type="password" class="form-control" placeholder="" value="123456">
                                            <span class="show-password-field">
                                            <i class="show-icon"></i>
                                            </span>
                                        <span asp-validation-for="FPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                <div class="col-12" style="display:none">
                                    <div class="form-group mb-20">
                                        <label  class="form-label">再次輸入密碼<span class="color-red">*</span></label>
                                        <div class="position-relative">
                                            <input type="password" class="form-control" placeholder="" value="">
                                            <span class="show-password-field">
                                                <i class="show-icon"></i>
                                            </span>
                                            <span  class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="custom-checkbox mb-10 font-sm">
                                        <input class="input-checkbox" type="checkbox" name="checkbox" id="checkbox4" value="">
                         @*            <label class="form-check-label" for="checkbox4"><span> 我同意來學樂平台的<a href="terms-conditions.html"> 服務條款＆隱私政策</a></span></label> *@
                                    </div>
                                </div>
                            </div>
                            <div class="text-center mt-10">
                                <button class="btn btn-lg btn-primary rounded-pill w-100" type="submit" aria-label="Login">登入</button>
                            </div>
                            <div class="d-flex justify-content-between flex-wrap gap-2 mt-30">
                                <div class="link font-sm">
                                    <a href="error-404.html" title="Forgot Password">忘記密碼？</a>
                                </div>
                            </div>
                    </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Authentication End -->

    @section Scripts{
    @{
        await Html.RenderPartialAsync("~/Views/Shared/_ValidationScriptsPartial.cshtml");
    }
    }
