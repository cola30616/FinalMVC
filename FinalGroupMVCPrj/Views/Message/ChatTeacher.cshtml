    ViewData["Title"] = "ChatTeacher";
    Layout = "~/Views/Shared/_LayoutTeacherAdmin.cshtml";
}
<div class="ChatContainer">
    <div class="leftSide">
        <!--header-->
        <!--<div class="header">
              <div class="userimg">
                  <img src="user.jpg" class="cover" />
              </div>
              <ul class="nav_icons">
                  <li><ion-icon name="scan-circle-outline"></ion-icon></li>
                  <li><ion-icon name="chatbox-outline"></ion-icon></li>
